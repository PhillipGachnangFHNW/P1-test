{
  "name": "Python Turtle Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "installVnc": true,
      "noVnc": true,
      "webPort": 6080
    }
  },
  "forwardPorts": [6080],
  "postCreateCommand": "pip install -U pip && pip install tk || true",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"]
    }
  }
}
